version: "3"

services:
  database:
    image: digitalpulp/mariadb:10.3.22
    volumes:
      - db:/var/lib/mysql
    environment:
      MYSQL_ROOT_PASSWORD: dpulp
      MYSQL_DATABASE: drupal
      MYSQL_USER: drupal
      MYSQL_PASSWORD: drupal
    networks:
      - internal
    ports:
      - "3306"
  php:
    # image: digitalpulp/php:7.3.24
    image: digitalpulp/php:7.4.12
    volumes:
      - .:/var/www
    working_dir: /var/www/docroot/
    networks:
      - internal
    environment:
      XDEBUG_HOST: {host_ip}
  web:
    image: digitalpulp/nginx:stable-alpine-1.0.1
    # image: digitalpulp/apache
    depends_on:
      - database
      - php
    volumes:
      - .:/var/www
    working_dir: /var/www/docroot/
    environment:
      VIRTUAL_HOST: {site_shortname}.{site_tld)
      DOCROOT: /var/www/docroot
      SERVER_NAME: {site_shortname}.{site_tld)
    networks:
      - internal
      - proxy
  front-end:
    image: digitalpulp/front-end:2.0-beta.1
    environment:
      THEME_NAME: {site_theme_name}
    depends_on:
      - web
    volumes:
      - .:/var/www
    networks:
      - internal
    working_dir: /var/www/docroot/themes/custom/{site_theme_name}
  cli:
  # image: digitalpulp/cli:7.3.24
    image: digitalpulp/cli:7.4.12
    depends_on:
      - database
      - php
      - web
    volumes:
      - .:/var/www
    working_dir: /var/www/docroot/
    networks:
      - internal
    environment:
      XDEBUG_HOST: {host_ip}
      PHP_IDE_CONFIG: serverName={site_shortname}.{site_tld)
#  solr:
#    image: wodby/drupal-solr:8-5.5-2.3.0
#    environment:
#      SOLR_HEAP: 1024m
#    networks:
#      - internal
volumes:
  db:
networks:
  internal:
  proxy:
    external:
      name: proxynet
